<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] [%d{yyyy-MM-dd HH:mm:ss.SSS}] %C.%M (%F:%L) - %msg%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<!-- TODO: Package Fix for ArcheType -->
		<Logger name="org.bib" level="debug" />
		
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>